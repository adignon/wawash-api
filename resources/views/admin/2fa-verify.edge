    @end

    <form action="{{ route('admin.2fa.verify.post') }}" method="POST">
      {{ csrfField() }}

      <div class="form-group">
        <label for="otp">
          Authentication Code
        </label>
        <input
          type="text"
          name="otp"
          id="otp"
          maxlength="6"
          placeholder="000000"
          required
          autofocus
          oninput="this.value = this.value.replace(/[^0-9]/g, '').substring(0, 6); if(this.value.length === 6) { this.form.requestSubmit(); }"
        >
      </div>

      <button type="submit" class="btn">
        üîì Verify & Sign In
      </button>
    </form>

    <div class="help-text">
      <span class="help-icon">üí°</span>
      <strong>Tip:</strong> The code changes every 30 seconds
    </div>

    <a href="{{ route('admin.login') }}" class="back-link">
      ‚Üê Back to Login
    </a>

    <div class="security-badge">
      <div class="security-badge-icon">üõ°Ô∏è</div>
      <div class="security-badge-text">
        Your account is protected with two-factor authentication.<br>
        This extra security step helps keep your account safe.
      </div>
    </div>
  </div>

  <script>
    // Auto-focus on input
    document.getElementById('otp').focus();

    // Auto-submit when 6 digits are entered
    document.getElementById('otp').addEventListener('input', function(e) {
      if (this.value.length === 6) {
        // Small delay to show the last digit
        setTimeout(() => {
          this.form.submit();
        }, 200);
      }
    });
  </script>
