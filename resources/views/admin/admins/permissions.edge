@slot('scripts')
  <script>
    function toggleModulePermissions(module) {
      const checkboxes = document.querySelectorAll('.module-' + module);
      const allChecked = Array.from(checkboxes).every(cb => cb.checked);

      checkboxes.forEach(cb => {
        cb.checked = !allChecked;
      });
    }
  </script>
