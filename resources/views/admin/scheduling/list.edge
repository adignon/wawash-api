  <script>
    function toggleMonth(monthId) {
      const content = document.getElementById(monthId + '-content');
      const icon = document.getElementById(monthId + '-icon');

      if (content.classList.contains('open')) {
        content.classList.remove('open');
        icon.classList.remove('rotated');
      } else {
        content.classList.add('open');
        icon.classList.add('rotated');
      }
    }

    function toggleWeek(weekId, event) {
      event.stopPropagation();
      const content = document.getElementById(weekId + '-content');
      const icon = document.getElementById(weekId + '-icon');

      if (content.classList.contains('open')) {
        content.classList.remove('open');
        icon.classList.remove('rotated');
      } else {
        content.classList.add('open');
        icon.classList.add('rotated');
      }
    }
  </script>
