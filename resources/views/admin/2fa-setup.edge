      </div>
    @end

    @if(flashMessages.has('info'))
      <div class="alert alert-info">
        <span class="alert-icon">‚ÑπÔ∏è</span>
        <div class="alert-message">{{ flashMessages.get('info') }}</div>
      </div>
    @end

    <div class="step">
      <div class="step-number">1</div>
      <div style="flex: 1;">
        <h3>Download an Authenticator App</h3>
        <p style="margin-bottom: 12px;">
          Install Google Authenticator, Authy, or any compatible TOTP app on your mobile device.
        </p>
        <div style="display: flex; gap: 12px; flex-wrap: wrap;">
          <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2" target="_blank" style="font-size: 13px;">
            üì± Google Authenticator (Android)
          </a>
          <a href="https://apps.apple.com/us/app/google-authenticator/id388497605" target="_blank" style="font-size: 13px;">
            üì± Google Authenticator (iOS)
          </a>
        </div>
      </div>
    </div>

    <div class="step">
      <div class="step-number">2</div>
      <div style="flex: 1;">
        <h3>Scan the QR Code</h3>
        <p style="margin-bottom: 16px;">
          Open your authenticator app and scan this QR code:
        </p>
        <div class="qr-code-container">
          <img src="{{ qrCodeDataUrl }}" alt="QR Code" style="width: 200px; height: 200px;">
        </div>
        <details>
          <summary>Can't scan? Enter the code manually</summary>
          <div class="secret-code">
            {{ secret }}
          </div>
        </details>
      </div>
    </div>

    <div class="step">
      <div class="step-number">3</div>
      <div style="flex: 1;">
        <h3>Enter Verification Code</h3>
        <p style="margin-bottom: 16px;">
          Enter the 6-digit code from your authenticator app to complete setup:
        </p>

        <form action="{{ route('admin.2fa.setup.complete') }}" method="POST">
          {{ csrfField() }}

          <div style="margin-bottom: 24px;">
            <input
              type="text"
              name="otp"
              id="otp"
              maxlength="6"
              placeholder="000000"
              required
              autofocus
              class="otp-input"
              oninput="this.value = this.value.replace(/[^0-9]/g, '').substring(0, 6);"
            >
          </div>

          <button type="submit" class="btn">
            üîê Complete Setup
          </button>
        </form>
      </div>
    </div>

    <div style="background: #fef3c7; border-left: 4px solid #f59e0b; padding: 16px; border-radius: 8px; margin-top: 32px;">
      <div style="display: flex; gap: 12px;">
        <div style="font-size: 20px;">‚ö†Ô∏è</div>
        <div>
          <div style="font-weight: 600; color: #92400e; margin-bottom: 4px; font-size: 14px;">
            Important Security Note
          </div>
          <div style="font-size: 13px; color: #78350f;">
            Save your secret code in a secure location. You'll need it to recover access if you lose your device.
          </div>
        </div>
      </div>
    </div>
  </div>
